.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin: 20px;
  padding: 5px;
  background: #EEE;
}

.motto-title {
  font-size: 20px;
  width: 100%;
}

.motto-body {
  font-size: 15px;
  width: 100%;
}